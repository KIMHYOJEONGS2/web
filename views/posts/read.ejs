<div class="my-5">
    <h1 class="text-center mb-5">게시글정보</h1>\
    <div id="div-posts"></div>
</div>
<script id="div-posts" type="x-handlebars-templates">
    <div class="card">
        <div class="card-body">
            <h5>{{title}}</h5>
            <hr>
            <div>{{body}}</div>
        </div>
        <div class="card-footer">
            <small>작성자: {{emali}}</small>
            <small>작성일: {{date}}</small>
        </div>
    </div>
</script>
<script type="module">
    import { app } from "/javascripts/firebase.js";
    import { getFirestore, setDoc, doc, getDoc } from "https://www.gstatic.com/firebasejs/10.4.0/firebase-firestore.js";
    const db=getFirestore(app);
    const id="<%=id%>";

    const snapshot =await getDoc(doc(db, `posts/${id}`));
    //console.log(snapshot.data());
    const temp= Headlebars.compile($("#temp-posts").html());
    $("div-posts").html(temp(snapshot.data()));
</script>